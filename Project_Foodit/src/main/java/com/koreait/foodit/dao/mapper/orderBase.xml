<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.koreait.foodit.dao.OrderBaseDao">

<insert id ="orderInsert">
INSERT INTO ORDER_BASE (ORDER_ID,ORDER_NAME,ORDER_POST,ORDER_ROAD1,ORDER_ROAD2,ORDER_ROAD3,ORDER_PHONE)
 VALUES 
 (#{param1},#{param2},#{param3},#{param4},#{param5},#{param6},#{param7})

</insert>

<select id="orderList" resultType="com.koreait.foodit.dto.OrderBaseDto">
 SELECT * FROM ORDER_BASE ORDER BY ORDER_ID
</select>

<select id="orderList_view" parameterType="String" resultType="com.koreait.foodit.dto.OrderBaseDto">
	
	SELECT * FROM ORDER_BASE WHERE ORDER_ID = #{param1}
	
</select>

<update id="orderListModify">
 UPDATE	 ORDER_BASE SET
		   ORDER_NAME = #{param1},
		   ORDER_POST = #{param2},
		   ORDER_ROAD1 = #{param3},
		   ORDER_ROAD2 = #{param4},
		   ORDER_ROAD3 = #{param5},
		   ORDER_PHONE = #{param6}
		WHERE
			ORDER_ID = #{param7}
</update>

<delete id="orderBaseDelete">

	 DELETE FROM ORDER_BASE WHERE ORDER_ID= #{param1}
	 
</delete>



</mapper>