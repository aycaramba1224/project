DROP TABLE CART;

CREATE TABLE cart ( 
 CART_NO NUMBER NOT NULL PRIMARY KEY,
 ORDER_NO NUMBER,  
 GUEST_NO NUMBER,
 CART_ID VARCHAR2(200) NULL, 
 PRODUCT_NO NUMBER NULL, 
 CART_AMOUNT NUMBER DEFAULT 0 );

DROP SEQUENCE CART_SEQ;
DROP SEQUENCE  CARTORDER_SEQ;
DROP SEQUENCE  GUESTORDER_SEQ;

CREATE SEQUENCE CART_SEQ START WITH 1 INCREMENT BY 1;
CREATE SEQUENCE  CARTORDER_SEQ START WITH 1 INCREMENT BY 1;
